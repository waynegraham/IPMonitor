<div class="container">
  <table class="table table-hover table-responsive">
    <thead>
      <tr>
        <th>Institution</th>
        <th>Number of Grants</th>
        <th>Number of Resources</th>
      </tr>
    </thead>
    <% @institutions.each do |institution| %>
    <tr>
      <td><%= link_to institution.name, institution %></td>
      <td><%= institution.grants.count %></td>
      <td><%= institution.resource_count %></td>
    </tr>
    <% end %>
  </table>
</div>
